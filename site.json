{
  "baseUrl": "",
  "titlePrefix": "CATcher",
  "style": {
    "codeTheme": "light"
  },
  "ignore": [
    "_markbind/layouts/*",
    "_markbind/logs/*",
    "_site/*",
    "site.json",
    "*.md",
    "*.mbd",
    "*.mbdf",
    "*.njk",
    ".git/*"
  ],
  "pages": [
    {
      "glob": ["**/*.+(md|mbd)"]
    },
    {
      "glob": ["dg/*.+(md|mbd)"],
      "frontmatter": {
        "layout": "dg-layout.md"
      }
    },
    {
      "glob": ["ug/*.+(md|mbd)"],
      "frontmatter": {
        "layout": "ug-layout.md"
      }
    }
  ],
  "deploy": {
    "message": "Site Update."
  }
}
